<div class="col-md-12">

    <table class="table">
      <thead>
        <tr>
          <th>文章内容</th>
          <th>发表时间</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.content %></td>
            <td><%= post.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
