<div class="col-md-12">


<!--  <table class="table table-striped table-bordered table-hover text-center">-->



  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>求职列表
        <div class="dropdown clearfix pull-right">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            排序
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
            <li>
              <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
            </li>
            <li>
              <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>

            </li>
            <li>
              <%= link_to("按照发表时间排序", jobs_path ) %>

            </li>
          </ul>

            <%= link_to "New Job", new_admin_job_path, class: "btn btn-primary pull-right" %>

        </div>
      </h3>


    </div>
    <div class="panel-body">
      <table class="table table-bordered table-striped custab table-hover text-center" >
        <thead>
        <tr>
          <td>
            职缺
          </td>

          <td>
            收到履历数量
          </td>
          <td>
            薪资下限
          </td>
          <td>
            薪资上限
          </td>
          <td>
            管理选项
          </td>
          <td>
            刊登时间
          </td>
        </tr>
        </thead>


        <tbody>
        <%= render :partial => "job_item", :collection => @jobs, :as => :job %>
        </tbody>
      </table>
    </div>
  </div>
</div>