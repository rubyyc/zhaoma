<div class="col-md-12">

    <table class="table">
      <thead>
        <tr>
          <th>文章内容</th>
          <th>发表者</th>
          <th>发表时间</th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td><%= job.content %></td>
            <td><%= job.user.email %></td>
            <td><%= job.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <div class="text-center">
    <%= will_paginate @jobs %>
  </div>
</div>
